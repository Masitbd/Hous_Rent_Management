<p id="notice"><%= notice %></p>

<h1>Bank Deposite Information</h1>

<table>
  <thead>
    <tr>
      <th>Bank name</th>
      <th>Deposite date</th>
      <th>Deposite amount</th>
      <th>Account name</th>
      <th>Account number</th>
      <th>Person name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.bank_name %></td>
        <td><%= bank.deposite_date %></td>
        <td><%= bank.deposite_amount %></td>
        <td><%= bank.account_name %></td>
        <td><%= bank.account_number %></td>
        <td><%= bank.person_name %></td>
        <td><%= link_to 'Show', bank %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
        <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

