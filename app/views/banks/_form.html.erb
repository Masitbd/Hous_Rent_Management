<%= render 'shared/errors', obj: @bank %>
<%= simple_form_for(@bank) do |f| %>

  <div class="form-inputs">
    <%= f.input :bank_name %>
    <%= f.date_field :deposite_date, class: 'datepicker', :value => Time.now.strftime('%Y-%m-%d') %> 
    <%= f.input :deposite_amount, input_html: {min: 0, step: 'any' } %>
    <%= f.input :account_name %>
    <%= f.input :account_number %>
    <%= f.input :person_name %>
  </div>
 
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
