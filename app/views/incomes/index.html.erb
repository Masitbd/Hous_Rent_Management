<p id="notice"><%= notice %></p>

<h1>Income Information</h1>

<table>
  <thead>
    <tr>
      <th>Item</th> 
      <th>Record date</th>
      <th>Rent amount</th>
      <th>Water bill</th>
      <th>Gas bill</th>
      <th>Electric bill</th>
      <th>Other amount</th>
      <th>Total Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% runing_total = 0 %>
    <% @incomes.each do |income| %>
      <tr>
       <td><h6><%= income.item.title %></h6></td>
        <td><h6><%= income.record_date %></h6></td>
        <td><h6><%= income.rent_amount %></h6></td>
        <td><h6><%= income.water_bill %></h6></td>
        <td><h6><%= income.gas_bill %></h6></td>
        <td><h6><%= income.electric_bill %></h6></td>
        <td><h6><%= income.other_amount %></h6></td>
        <td><h6><%= (income.rent_amount + income.water_bill + income.gas_bill + income.electric_bill + income.other_amount) %></h6></td>
         <td><h6><%= link_to 'Show', income, class: "btn waves-effect waves-light" %></h6></td>
        <td><h6><%= link_to 'Edit', edit_income_path(income), class: "btn waves-effect  blue darken-3" %></h6></td>
        <td><h6><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect red darken-2" %></h6></td>
         <% runing_total = runing_total + (income.rent_amount + income.water_bill + income.gas_bill + income.electric_bill + income.other_amount) %>
        </tr>
      
    <% end %>
   
  </tbody>
</table>
 <h4 class="right-align">Total Amount:  <%= runing_total %></h4>

<br>
<%= link_to  new_income_path, class: "btn waves-effect waves-light", :method => :get do %>
  New Income
  <% end %>
  